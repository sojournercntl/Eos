<UserControl x:Class="LighthouseClientExample.View.VisualNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LighthouseClientExample.View"
             mc:Ignorable="d" Width="300" Height="40" Margin="5"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#FF2C2C2C" CornerRadius="10">
        <Grid>
            <Label Name="lbl_message" Content="Message" Foreground="White" Background="#FF2C2C2C" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        </Grid>
    </Border>
</UserControl>
